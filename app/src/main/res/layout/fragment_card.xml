<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardsActivityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurfaceContainerLowest"
    tools:context=".home.CardFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurfaceContainerLowest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">

        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search_decks_or_cards"
            android:textAppearance="@style/TextAppearance.App.Hint"
            android:backgroundTint="?colorSurfaceContainerLow"
            app:navigationIcon="@drawable/icon_menu"
            app:navigationIconTint="?colorOnSurface"
            app:menu="@menu/card_fragment_menu">
        </com.google.android.material.search.SearchBar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_deck_path"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sm"
            android:scrollbars="none"
            android:transitionGroup="true"
            android:layout_marginTop="@dimen/space_sm"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.search.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/search_decks_or_cards"
        app:layout_anchor="@id/search_bar">

        <include
            android:id="@+id/in_search_result"
            layout="@layout/ly_deck_card_search_result"/>

    </com.google.android.material.search.SearchView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurfaceContainerLowest"
        android:transitionGroup="true"
        android:layout_marginBottom="@dimen/extra_space_bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/container_no_card_and_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_xl"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_lg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:textAppearance="@style/TextAppearance.App.BodyMedium"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/no_deck_and_card"
            android:textAlignment="center"
            android:textColor="?colorOnSurface"
            app:drawableBottomCompat="@drawable/icon_bottom_right_click" />
    </LinearLayout>

    <com.google.android.material.dockedtoolbar.DockedToolbarLayout
        android:id="@+id/docked_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorSurfaceContainerLowest"
        android:layout_gravity="bottom"
        app:layout_behavior="com.google.android.material.behavior.HideViewOnScrollBehavior">

        <LinearLayout
            android:id="@+id/docked_toolbar_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_more"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/bt_text_translate"
                    app:icon="@drawable/icon_more"
                    app:iconTint="?colorOnSurface"
                    android:backgroundTint="?colorSurfaceContainerLow" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_start_quiz"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/start_quiz_button_text"
                    app:icon="@drawable/icon_view_carousel"
                    app:iconTint="?colorOnSurface"
                    android:backgroundTint="?colorSurfaceContainerLow"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_start_flash_cards"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/bt_flash_card_game_start"
                    app:icon="@drawable/icon_cards_stack"
                    app:iconTint="?colorOnSurface"
                    android:backgroundTint="?colorSurfaceContainerLow"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:minWidth="48dp"
                android:layout_marginVertical="@dimen/space_sm"
                android:orientation="vertical"
                app:layout_anchorGravity="bottom|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_show_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/bt_description_add_new_card"
                    android:backgroundTint="?colorPrimary"
                    app:srcCompat="@drawable/icon_add"
                    app:shapeAppearance="@style/ShapeAppearance.App.Circle"
                    app:elevation="0dp"
                    app:pressedTranslationZ="0dp"
                    app:hoveredFocusedTranslationZ="0dp"
                    app:borderWidth="0dp"
                    android:outlineProvider="none"
                    app:useCompatPadding="false" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.dockedtoolbar.DockedToolbarLayout>

    <TextView
        android:id="@+id/tv_no_card_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_xl"
        android:text="@string/error_message_no_card_found"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.App.BodyMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cardsActivityProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            android:id="@+id/ly_no_card_error"
            layout="@layout/ly_loading_screen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_add_subdeck_and_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral800_transparent"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:visibility="gone"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/bt_add_subdeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xl"
            android:text="@string/add_subdeck"
            android:layout_marginEnd="@dimen/space_lg"/>

        <Button
            android:id="@+id/bt_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xl"
            android:layout_marginEnd="@dimen/space_lg"
            android:text="@string/add_card" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_hide_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bt_description_add_new_card"
            android:backgroundTint="?colorPrimary"
            app:srcCompat="@drawable/icon_exit"
            app:shapeAppearance="@style/ShapeAppearance.App.Circle"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:hoveredFocusedTranslationZ="0dp"
            app:borderWidth="0dp"
            android:outlineProvider="none"
            app:useCompatPadding="false"
            android:layout_marginEnd="@dimen/space_lg"
            android:layout_marginBottom="@dimen/space_sm"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>