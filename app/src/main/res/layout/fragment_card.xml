<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardsActivityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorSurfaceContainerLowest"
    tools:context=".card.CardFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?colorSurfaceContainerLow">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cardsTopAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/deck_activity_title"
            app:navigationIcon="@drawable/icon_chevron_left"
            app:navigationIconTint="?colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/cardsActivityProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionGroup="true"
        android:layout_margin="@dimen/space_xs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/onNoDeckTextError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/error_card_border"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/addNewCardBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/warning_icon"
            android:src="@drawable/icon_warning" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/on_no_card_text_hint"
            android:textAlignment="center"
            android:textColor="?colorOnError"
            android:textSize="15sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/startQuizBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:backgroundTint="?colorSurfaceContainerHighest"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/start_quiz_button_text"
        android:layout_marginBottom="@dimen/space_xxs"
        android:textColor="?colorOnPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/text_base"
        app:cornerRadius="@dimen/bt_radius"
        app:layout_constraintBottom_toTopOf="@+id/addNewCardBT"
        app:layout_constraintEnd_toEndOf="@+id/addNewCardBT" />

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/addNewCardBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_xs"
        android:backgroundTint="?colorSurfaceContainerHighest"
        android:contentDescription="@string/add_new_card_button_description"
        android:text="@string/bt_text_add"
        android:textColor="?colorOnPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/text_base"
        android:fontFamily="@font/open_sans_bold"
        app:cornerRadius="@dimen/bt_radius"
        app:layout_constraintBottom_toTopOf="@+id/bt_action"
        app:layout_constraintEnd_toEndOf="@+id/bt_action" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_sm"
        android:layout_marginEnd="@dimen/space_sm"
        android:backgroundTint="?colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_action"
        android:tint="?colorSurfaceContainerLowest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/bt_action" />

</androidx.constraintlayout.widget.ConstraintLayout>