<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container_content_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_content"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.App.TitleSmall"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_language"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_sm"
        android:padding="0dp"
        android:text="@string/text_content_language"
        android:textColor="?colorPrimary"
        android:textAppearance="@style/TextAppearance.App.BodyMedium"
        app:icon="@drawable/icon_expand_more"
        app:iconGravity="end"
        app:iconTint="?colorPrimary" />
</LinearLayout>