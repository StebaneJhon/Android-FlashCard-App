<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quizModeDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?colorSurfaceContainerLow"
    style="@style/Widget.Material3.BottomSheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_sm"
    android:paddingEnd="@dimen/space_sm"
    android:paddingBottom="@dimen/space_xs">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/tv_quiz_mode_title"
            android:textAlignment="center"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_base"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_flash_card_game"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_flash_card_game_start"
            android:textColor="?colorOnSurface"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_flip"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:id="@+id/bt_flash_card_game_timed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_text_flash_card_timed"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_timer"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiChoiceQuizButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/multiple_choice_quiz_button_text"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_quiz"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_writing_quiz_game"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_start_writing_quiz_game_text"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_writing"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_matching_quiz_game"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_match_quiz_mode_text"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_dashboard"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_quiz"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_test_quiz_game_text"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_neurology"
            app:iconTint="?colorOnSurface"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_test"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="?colorSurfaceContainer"
            android:text="@string/bt_text_test"
            android:textColor="?colorOnSurface"
            android:fontFamily="@font/open_sans"
            app:cornerRadius="@dimen/bt_radius"
            app:icon="@drawable/icon_fire"
            app:iconTint="?colorOnSurface"/>

</LinearLayout>