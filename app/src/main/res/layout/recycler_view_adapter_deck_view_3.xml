<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deckRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp">

    <ImageView
        android:id="@+id/iv_deck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_lg"
        android:src="@drawable/icon_playing_cards"
        android:background="@drawable/bg_radius_sm"
        android:backgroundTint="?colorSurfaceContainer"
        android:padding="@dimen/space_md"
        android:layout_marginVertical="@dimen/space_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deckNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/space_md"
        android:layout_marginEnd="@dimen/space_md"
        android:layout_marginStart="@dimen/space_md"
        android:fontFamily="@font/open_sans"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/text_base"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/popup_menu_BT"
        app:layout_constraintStart_toEndOf="@+id/iv_deck"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Init Deck" />

    <LinearLayout
        android:id="@+id/container_deck_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xs"
        android:layout_marginBottom="@dimen/space_md"
        android:layout_marginStart="@dimen/space_md"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_deck"
        app:layout_constraintTop_toBottomOf="@+id/deckNameTV">

        <LinearLayout
            android:id="@+id/ll_container_known_cards_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm">

            <include
                android:id="@+id/in_known_cards_sum"
                layout="@layout/ly_card_count" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_un_known_cards_Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm">

            <include
                android:id="@+id/in_un_known_cards_Sum"
                layout="@layout/ly_card_count" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_cards_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm">

            <include
                android:id="@+id/in_cards_sum"
                layout="@layout/ly_card_count" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_deck_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/text_xxs"
            tools:text="year-month-day" />
    </LinearLayout>

    <Button
        android:id="@+id/popup_menu_BT"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:contentDescription="@string/content_description_icon_clickable_item"
        android:padding="0dp"
        app:icon="@drawable/icon_more"
        app:iconTint="?colorOnSurface"
        android:layout_marginEnd="@dimen/space_lg"
        android:layout_marginHorizontal="@dimen/space_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>