<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:backgroundTint="?colorSurfaceContainerLowest"
    android:background="?colorSurfaceContainerLowest">

    <ImageView
        android:id="@+id/iv_icon_complete_score_layout"
        android:layout_width="136dp"
        android:layout_height="105dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Check icon"
        android:src="@drawable/check_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_score_title_score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/flashcard_score_title_text"
        android:textSize="27sp"
        android:textColor="?colorOnSurface"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_complete_score_layout" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpi_quiz_result_diagram_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:trackThickness="25dp"
        app:indicatorColor="@color/red200"
        app:trackColor="@color/green200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score_title_score_layout" />

    <TextView
        android:id="@+id/tv_move_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_title_score_layout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_missed_move_layout"
        android:fontFamily="@font/open_sans"
        android:text="@string/text_move"
        android:textColor="@color/green500"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lpi_quiz_result_diagram_score_layout" />

    <TextView
        android:id="@+id/tv_move_number_sum_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_title_score_layout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/card_border_rounded"
        android:backgroundTint="@color/green500"
        android:fontFamily="@font/open_sans_bold"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        tools:text="5"
        android:textColor="?colorSurfaceContainerLowest"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_move_number_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score_title_score_layout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_missed_move_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_move_number_layout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_move_number_layout"
        android:fontFamily="@font/open_sans"
        android:text="@string/text_missed_move_sum"
        android:textColor="@color/red500"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_move_number_layout" />

    <TextView
        android:id="@+id/tv_missed_move_sum_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_missed_move_layout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/card_border_rounded"
        android:backgroundTint="@color/red500"
        android:fontFamily="@font/open_sans_bold"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="0"
        android:textColor="?colorSurfaceContainerLowest"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_missed_move_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_move_number_layout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_total_cards_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_missed_move_layout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_missed_move_layout"
        android:fontFamily="@font/open_sans"
        android:text="@string/total_cards_text"
        android:textColor="?colorPrimaryContainer"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_missed_move_layout" />

    <TextView
        android:id="@+id/tv_total_cards_sum_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_missed_move_sum_layout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/card_border_rounded"
        android:backgroundTint="?colorPrimaryContainer"
        android:fontFamily="@font/open_sans_bold"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="0"
        android:textColor="?colorSurfaceContainerLowest"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_cards_score_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_missed_move_layout"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:text="@string/bt_continue_match_quiz_score"
        app:cornerRadius="5dp"
        android:textStyle="bold"
        android:backgroundTint="?colorSurfaceContainerHighest"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="?colorSurfaceContainerLowest"
        app:layout_constraintBottom_toTopOf="@+id/bt_restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_restart_match_quiz_score"
        app:cornerRadius="5dp"
        android:textStyle="bold"
        android:backgroundTint="?colorSurfaceContainerHighest"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="?colorSurfaceContainerLowest"
        app:layout_constraintBottom_toTopOf="@+id/bt_back_to_deck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_back_to_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_back_to_deck_match_quiz_score"
        app:cornerRadius="5dp"
        android:textStyle="bold"
        android:backgroundTint="?colorSurfaceContainerHighest"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="?colorSurfaceContainerLowest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>