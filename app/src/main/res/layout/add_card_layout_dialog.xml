<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/cardContentTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_content_hint"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/cardContentDefinitionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_content_definition_hint"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/cardValueTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_definition"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/cardValueDefinitionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/card_value_definition_hint"
        android:layout_marginBottom="10dp"/>

</LinearLayout>