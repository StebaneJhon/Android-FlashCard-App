<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deckRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:backgroundTint="?colorPrimary"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimaryVariant">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:elevation="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/firstLanguageHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="?colorAccent"
                android:textSize="15sp"
                tools:text="French"
                android:fontFamily="@font/open_sans"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:backgroundTint="?colorPrimaryVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/deckNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="?colorAccent"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Init Deck" />

            <TextView
                android:id="@+id/deckDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_bold"
                tools:text="Test deck description"
                android:textColor="?colorAccent"
                android:layout_below="@+id/deckNameTV"/>

            <TextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                tools:text="@string/deck_languages"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="?colorAccent"
                android:layout_below="@+id/deckDescriptionTV"/>

            <TextView
                android:id="@+id/cardsSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/cards_sum"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans"
                android:textColor="?colorAccent"
                android:layout_below="@id/languages"/>

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardsSum"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="?colorPrimaryVariant"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/start_quiz_button_text"
                android:textColor="?colorPrimary"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/deleteDeckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardsSum"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/editDeckButton"
                android:background="@color/transparent"
                android:src="@drawable/icon_delete" />

            <ImageButton
                android:id="@+id/editDeckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardsSum"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_edit" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>