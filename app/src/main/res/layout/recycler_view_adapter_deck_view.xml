<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deckRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_lg"
    android:layout_marginVertical="@dimen/space_xs"
    app:cardBackgroundColor="?colorSurfaceContainerLow"
    app:cardCornerRadius="@dimen/radius_xl"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_lg">

        <TextView
            android:id="@+id/deckNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/space_sm"
            android:fontFamily="@font/open_sans"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_base"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/popup_menu_BT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Init Deck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deckNameTV">

            <LinearLayout
                android:id="@+id/ll_container_known_cards_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_sm">

                <include
                    android:id="@+id/in_known_cards_sum"
                    layout="@layout/ly_card_count" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_container_un_known_cards_Sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_sm">

                <include
                    android:id="@+id/in_un_known_cards_Sum"
                    layout="@layout/ly_card_count" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_container_cards_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_sm">

                <include
                    android:id="@+id/in_cards_sum"
                    layout="@layout/ly_card_count" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_deck_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="year-month-day"
                android:textSize="@dimen/text_xxs"
                android:fontFamily="@font/open_sans"
