<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/space_lg">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/icon_exit"
        app:iconTint="?colorOnSurface"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_exit"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/container_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                app:layout_constraintBottom_toTopOf="@+id/container_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/in_1"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_1">

                <include
                    android:id="@+id/in_2"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_2">

                <include
                    android:id="@+id/in_3"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/container_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_3">

                <include
                    android:id="@+id/in_4"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/container_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_4">

                <include
                    android:id="@+id/in_5"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_5">

                <include
                    android:id="@+id/in_6"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_6">

                <include
                    android:id="@+id/in_7"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/container_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_7">

                <include
                    android:id="@+id/in_8"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toTopOf="@+id/container_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_8">

                <include
                    android:id="@+id/in_9"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/container_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_9">

                <include
                    android:id="@+id/in_10"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>