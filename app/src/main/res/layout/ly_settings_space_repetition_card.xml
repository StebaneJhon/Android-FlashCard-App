<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_radius_base"
    android:backgroundTint="?colorSurfaceContainerLowest"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_space_repetition_section_item">

        <TextView
            android:id="@+id/tv_space_repetition_forgetting_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_base"
            app:autoSizeMaxTextSize="@dimen/text_xl2"
            app:autoSizeMinTextSize="@dimen/text_xxs"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/tv_space_repetition_level_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:id="@+id/tv_space_repetition_level_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_xs"
            android:layout_margin="@dimen/space_xs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="L2" />

</androidx.constraintlayout.widget.ConstraintLayout>