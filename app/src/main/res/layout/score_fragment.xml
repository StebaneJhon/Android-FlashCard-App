<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorPrimaryDark"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?colorAccent"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"
        android:text="@string/flashcard_complete_text"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/KnownCardsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?colorAccent"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"
        android:text="@string/known_cards_text"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/missedCardTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?colorAccent"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"
        android:text="@string/missed_cards_text"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reviseMissedCardBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimaryVariant"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/revise_missed_cards_button_txt"
        app:cornerRadius="15dp"
        android:layout_marginBottom="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/restartFlashCardBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimaryVariant"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/restart_flashcard_button_text"
        app:cornerRadius="15dp"
        android:layout_marginBottom="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToDeckBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimaryVariant"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/back_to_deck_text_button"
        app:cornerRadius="15dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>