<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_add_card_field">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cl_content_container_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/space_sm"
        android:layout_marginTop="@dimen/space_sm"
        app:layout_constraintBottom_toTopOf="@+id/ll_content_container_audio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_content_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_radius_sm"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_content_delete_image"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="@dimen/height_sm"
            android:layout_height="@dimen/height_sm"
            android:layout_margin="@dimen/space_xs"
            android:backgroundTint="?colorSurfaceContainerHigh"
            android:clickable="false"
            android:contentDescription="@string/bt_description_next"
            app:icon="@drawable/icon_exit"
            app:iconGravity="textEnd"
            app:iconTint="?colorOnSurface"
            app:iconSize="@dimen/icon_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="?colorSurfaceContainerHighest" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_content_container_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:backgroundTint="?colorSurfaceContainer"
        android:background="@drawable/bg_radius_sm"
        android:layout_marginHorizontal="@dimen/space_sm"
        android:layout_marginTop="@dimen/space_sm"
        app:layout_constraintBottom_toTopOf="@+id/til_content_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_content_container_image">

        <include
            android:id="@+id/ly_content_audio"
            layout="@layout/ly_audio_field" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_xxs"
        android:layout_weight="1"
        android:padding="0dp"
        app:errorTextAppearance="@style/TextAppearance.App.BodyMedium"
        app:hintTextAppearance="@style/TextAppearance.App.Hint"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/ll_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_content_text"
            style="@style/Widget.App.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/til_card_content_hint"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:textAppearance="@style/TextAppearance.App.BodyMedium"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/space_sm"
        android:layout_marginBottom="@dimen/space_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include
            android:id="@+id/view_error"
            layout="@layout/ly_field_error"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>