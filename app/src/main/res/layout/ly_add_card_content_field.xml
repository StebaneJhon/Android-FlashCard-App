            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_content_delete_image"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="@dimen/height_sm"
            android:layout_height="@dimen/height_sm"
            android:layout_margin="@dimen/space_xs"
            android:backgroundTint="?colorSurfaceContainerHigh"
            android:clickable="false"
            android:contentDescription="@string/bt_description_next"
            app:icon="@drawable/icon_exit"
            app:iconGravity="textEnd"
            app:iconTint="?colorOnSurface"
            app:iconSize="@dimen/icon_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="?colorSurfaceContainerHighest" />

    </androidx.constraintlayout.widget.ConstraintLayout>

