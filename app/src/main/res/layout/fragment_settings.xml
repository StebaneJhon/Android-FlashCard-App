<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurfaceContainerLow">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/cardsTopAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/icon_chevron_left"
                app:navigationIconTint="?colorOnSurface"
                app:title="@string/deck_activity_title" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile_section_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_profile_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="@string/profile_tab_title"
                android:textColor="@color/grey500"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?colorSurfaceContainerHigh"
                android:gravity="center"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_section_title">
                <TextView
                    android:id="@+id/initialName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="A"
                    android:textAlignment="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_profile_section_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Anonymous"
                android:textColor="?colorOnSurface"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.267" />

            <TextView
                android:id="@+id/tv_profile_section_user_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_light"
                android:text="User"
                android:textColor="?colorOnSurface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_profile_section_user_name"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/tv_profile_section_user_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_section_user_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_theme_section"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_theme_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/grey500"
                android:text="@string/themes_head_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/gl_theme_section_theme_buttons_root"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:columnCount="5"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/whiteThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/redThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/red700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/pinkThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/pink700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/purpleThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/purple700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/blueThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/blue700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/tealThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/teal700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/greenThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/green700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/yellowThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/yellow700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/browneThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/brown700"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/blackThemeButton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/theme_button_background"
                    android:backgroundTint="@color/black"
                    android:orientation="horizontal" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_space_repetition_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_space_repetition_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/tv_space_repetition_title"
                android:textColor="@color/grey500"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_space_repetition_section"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:scrollbars="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_language_section_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_language_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/grey500"
                android:text="@string/tv_language_section_settings"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:fontFamily="@font/open_sans"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_others_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_others_repetition_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/grey500"
                android:text="@string/tv_others_section_settings"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_privacy_others_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSurfaceContainer"
                app:cornerRadius="6dp"
                android:text="@string/bt_privacy_text"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_contact_others_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSurfaceContainer"
                app:cornerRadius="6dp"
                android:text="@string/bt_contact_text"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_help_others_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSurfaceContainer"
                app:cornerRadius="6dp"
                android:text="@string/bt_help_text"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_rate_others_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSurfaceContainer"
                app:cornerRadius="6dp"
                android:text="@string/bt_rate_the_app_text"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_about_others_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSurfaceContainer"
                app:cornerRadius="6dp"
                android:text="@string/bt_about_the_quizeo_text"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>