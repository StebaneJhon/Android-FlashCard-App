<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.SettingsFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/themes_head_text"
        android:textAlignment="center"
        android:textColor="?colorOnSurface"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="2dp"
        android:columnCount="5"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:id="@+id/whiteThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/white"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/redThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/red700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/pinkThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/pink700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/purpleThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/purple700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/blueThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/blue700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/tealThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/teal700"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/greenThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/green700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/yellowThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/yellow700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/browneThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/brown700"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/blackThemeButton"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/theme_button_background"
            android:backgroundTint="@color/black"
            android:orientation="horizontal" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>