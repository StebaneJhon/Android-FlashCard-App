<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_root"
    app:cardBackgroundColor="?colorSurfaceContainerLow"
    app:cardCornerRadius="@dimen/radius_lg"
    app:strokeColor="?colorSurfaceContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inner_deck_border"
        android:backgroundTint="?colorSurfaceContainerLow"
        android:layout_margin="@dimen/space_sm">

        <FrameLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include
                android:id="@+id/in_content"
                layout="@layout/ly_card_content" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/container_definition_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_content">
            <include
                android:id="@+id/in_definition_1"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_1">
            <include
                android:id="@+id/in_definition_2"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_2">
            <include
                android:id="@+id/in_definition_3"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_3">
            <include
                android:id="@+id/in_definition_4"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_4">
            <include
                android:id="@+id/in_definition_5"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_5">
            <include
                android:id="@+id/in_definition_6"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_6">
            <include
                android:id="@+id/in_definition_7"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_7">
            <include
                android:id="@+id/in_definition_8"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_8">
            <include
                android:id="@+id/in_definition_9"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/container_definition_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_9">
            <include
                android:id="@+id/in_definition_10"
                layout="@layout/ly_card_definition" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_card_description_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/red500"
            android:layout_marginTop="@dimen/space_xxs"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.App.BodySmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_10"
            tools:text="Test deck description" />

        <LinearLayout
            android:id="@+id/ll_container_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xxs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pupUpBT"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_10">
            <include
                android:id="@+id/in_level"
                layout="@layout/ly_card_level" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/space_xs"
            android:paddingStart="@dimen/space_xs"
            android:paddingEnd="@dimen/space_xs"
            android:background="@drawable/bg_10_dp_radius"
            android:backgroundTint="@color/green700"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:textColor="?colorSurfaceContainerLowest"
            android:textSize="@dimen/text_xxs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pupUpBT"
            app:layout_constraintTop_toBottomOf="@+id/container_definition_10"
            tools:text="L1" />

        <Button
            android:id="@+id/pupUpBT"
            style="?attr/materialIconButtonStyle"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:contentDescription="@string/full_screen_button_description_text"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            app:icon="@drawable/icon_more"
            app:iconGravity="start"
            app:iconSize="25dp"
            app:iconTint="?colorOnSurface"
            android:layout_marginTop="@dimen/space_xxs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_card_status"
            app:layout_constraintBottom_toBottomOf="@+id/tv_card_status"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>