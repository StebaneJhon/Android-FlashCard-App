<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="?colorSurfaceContainerLowest"
    android:layout_margin="@dimen/space_xs"
    app:cardCornerRadius="@dimen/card_radius"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inner_deck_border"
        android:backgroundTint="?colorSurfaceContainer"
        android:padding="@dimen/space_sm">

        <TextView
            android:id="@+id/tv_card_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:textAlignment="textStart"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_sm"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Init Deck" />

        <TextView
            android:id="@+id/tv_card_description1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textStart"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_sm"
            android:layout_marginTop="@dimen/space_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_content"
            tools:text="Test deck description" />

        <TextView
            android:id="@+id/tv_card_description2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textStart"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_sm"
            android:layout_marginTop="@dimen/space_xxs"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_description1"
            tools:text="Test deck description" />

        <TextView
            android:id="@+id/tv_card_description3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textStart"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/text_sm"
            android:layout_marginTop="@dimen/space_xxs"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_description2"
            tools:text="Test deck description" />

        <TextView
            android:id="@+id/tv_card_description_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textStart"
            android:textColor="@color/red500"
            android:textSize="@dimen/text_sm"
            android:layout_marginTop="@dimen/space_xxs"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_description3"
            tools:text="Test deck description" />

        <TextView
            android:id="@+id/tv_card_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/open_sans_light"
            android:backgroundTint="@color/green700"
            android:layout_marginTop="@dimen/space_xs"
            android:textColor="?colorSurfaceContainerLowest"
            android:textSize="@dimen/text_xxs"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pupUpBT"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_description3"
            tools:text="L1" />

        <Button
            android:id="@+id/pupUpBT"
            style="?attr/materialIconButtonStyle"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:contentDescription="@string/full_screen_button_description_text"
            app:icon="@drawable/icon_more"
            app:iconTint="?colorOnSurface"
            app:iconGravity="start"
            app:iconSize="25dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:layout_marginBottom="2.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_card_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_card_status"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>