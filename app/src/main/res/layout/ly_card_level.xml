<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <View
        android:id="@+id/vw_level_color"
        android:layout_width="@dimen/width_xxs"
        android:layout_height="@dimen/height_xxs"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/red600"
        android:layout_marginEnd="@dimen/space_xs"/>

    <TextView
        android:id="@+id/tv_level_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.App.LabelSmall"/>

</LinearLayout>