<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_content_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_definition_field">


        <ImageView
            android:id="@+id/img_content_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/space_xs"
            android:background="@drawable/bg_card_top_element"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_container_content_audio"
            android:src="@drawable/ic_launcher_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_delete_content_image"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_xs"
            android:backgroundTint="?colorPrimary"
            android:clickable="false"
            android:contentDescription="@string/bt_description_next"
            android:fontFamily="@font/open_sans"
            android:textColor="?colorSurfaceContainerLowest"
            app:icon="@drawable/icon_exit"
            app:iconGravity="end"
            app:iconTint="?colorSurfaceContainerLowest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="?colorSurfaceContainerHighest" />

        <LinearLayout
            android:id="@+id/ll_container_content_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_radius_xs"
            android:backgroundTint="?colorSurfaceContainerHigh"
            android:layout_marginHorizontal="@dimen/space_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_content_photo"
            app:layout_constraintBottom_toTopOf="@+id/tilContentMultiAnswerCard">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_play_content_audio"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_xs"
                android:backgroundTint="?colorPrimary"
                android:clickable="false"
                android:contentDescription="@string/bt_description_next"
                app:icon="@drawable/icon_play"
                app:iconTint="?colorSurfaceContainerLowest"
                app:iconGravity="end"
                android:textColor="?colorSurfaceContainerLowest"
                android:fontFamily="@font/open_sans"
                app:rippleColor="?colorSurfaceContainerHighest" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_content_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:value="20.0"
                android:valueFrom="0.0"
                android:valueTo="100.0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_delete_content_audio"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_xs"
                android:backgroundTint="?colorPrimary"
                android:clickable="false"
                android:contentDescription="@string/bt_description_next"
                app:icon="@drawable/icon_exit"
                app:iconTint="?colorSurfaceContainerLowest"
                app:iconGravity="end"
                android:textColor="?colorSurfaceContainerLowest"
                android:fontFamily="@font/open_sans"
                app:rippleColor="?colorSurfaceContainerHighest" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilContentMultiAnswerCard"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:padding="0dp"
            android:layout_margin="@dimen/space_xs"
            app:hintEnabled="false"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieContentMultiAnswerCard"
                style="@style/Widget.App.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/til_card_content_hint"
                android:inputType="textMultiLine"
                android:maxLines="10" />
        </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>