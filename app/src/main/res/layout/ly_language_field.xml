<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_radius_base"
    android:backgroundTint="?colorSurfaceContainer"
    android:paddingHorizontal="@dimen/space_md"
    android:paddingVertical="@dimen/space_md"
    android:id="@+id/vw_root">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.App.BodyMedium"
        android:layout_marginEnd="@dimen/space_sm"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.App.TitleSmall"
        android:layout_marginEnd="@dimen/space_md"
        android:layout_marginStart="@dimen/space_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dr_expand"
        app:layout_constraintStart_toEndOf="@+id/tv_header"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Language" />

    <ImageView
        android:id="@+id/dr_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_expand_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    
</androidx.constraintlayout.widget.ConstraintLayout>