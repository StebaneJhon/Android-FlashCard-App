<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:alpha="0"
        android:id="@+id/cv_card_container_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_lg"
        app:cardCornerRadius="@dimen/radius_xxl"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_flash_card"
            android:backgroundTint="?colorSurfaceContainerHigh"
            android:paddingBottom="@dimen/space_xs">

            <TextView
                android:id="@+id/tv_card_type_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_sm"
                android:textAppearance="@style/TextAppearance.App.LabelSmall"
                android:textColor="?colorOnSurfaceVariant"
                app:layout_constraintBottom_toBottomOf="@+id/bt_speak_back"
                app:layout_constraintEnd_toStartOf="@+id/bt_speak_back"
                app:layout_constraintTop_toTopOf="@+id/bt_speak_back"
                tools:text="Flash Card" />

            <Button
                android:id="@+id/bt_speak_back"
                style="?attr/materialIconButtonStyle"
                android:layout_width="@dimen/icon_base"
                android:layout_height="@dimen/icon_base"
                android:contentDescription="@string/bt_help_button_text"
                app:icon="@drawable/icon_speak"
                app:iconTint="?colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/transparent" />

            <FrameLayout
                android:id="@+id/tv_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_md"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_speak_back">
                <include
                    android:id="@+id/in_definition"
                    layout="@layout/ly_quiz_question" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_lg"
        app:cardCornerRadius="@dimen/radius_xxl"
        app:strokeWidth="0dp">

            <ScrollView
                android:id="@+id/scrollable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fron_card_inner_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_flash_card"
                    android:backgroundTint="?colorSurfaceContainer"
                    android:paddingBottom="@dimen/space_xs">

                    <TextView
                        android:id="@+id/tv_card_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_sm"
                        android:textColor="?colorOnSurfaceVariant"
                        android:textAppearance="@style/TextAppearance.App.LabelSmall"
                        app:layout_constraintBottom_toBottomOf="@+id/bt_speak"
                        app:layout_constraintEnd_toStartOf="@+id/bt_speak"
                        app:layout_constraintTop_toTopOf="@+id/bt_speak"
                        tools:text="Flash Card" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_speak"
                        style="?attr/materialIconButtonStyle"
                        android:layout_width="@dimen/icon_base"
                        android:layout_height="@dimen/icon_base"
                        android:contentDescription="@string/bt_help_button_text"
                        android:layout_marginBottom="@dimen/space_lg"
                        app:icon="@drawable/icon_speak"
                        app:iconTint="?colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="@color/transparent" />

                    <FrameLayout
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space_md"
                        android:layout_marginVertical="@dimen/space_lg"
                        app:layout_constraintBottom_toTopOf="@+id/tv_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_speak">

                        <include
                            android:id="@+id/in_content"
                            layout="@layout/ly_quiz_question" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space_md"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:text="@string/text_not_answered"
                        android:textAppearance="@style/TextAppearance.App.LabelSmall"
                        android:textColor="?colorOnSurfaceVariant"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <FrameLayout
                        android:layout_marginHorizontal="@dimen/space_md"
                        android:id="@+id/bt_alternative1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <include
                            android:id="@+id/in_alternative1"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/bt_alternative3">
                        <include
                            android:id="@+id/in_alternative2"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <include
                            android:id="@+id/in_alternative3"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative5">
                        <include
                            android:id="@+id/in_alternative4"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <include
                            android:id="@+id/in_alternative5"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/bt_alternative7">
                        <include
                            android:id="@+id/in_alternative6"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <include
                            android:id="@+id/in_alternative7"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative9">
                        <include
                            android:id="@+id/in_alternative8"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintBottom_toTopOf="@+id/bt_alternative10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <include
                            android:id="@+id/in_alternative9"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bt_alternative10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@drawable/bg_radius_sm"
                        android:backgroundTint="?colorSurfaceContainerLowest"
                        android:layout_marginHorizontal="@dimen/space_md"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <include
                            android:id="@+id/in_alternative10"
                            layout="@layout/ly_quiz_alternative"/>
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


    </com.google.android.material.card.MaterialCardView>


</FrameLayout>