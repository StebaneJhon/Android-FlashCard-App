<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_card_root"
    app:cardBackgroundColor="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_card_container_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_margin="@dimen/space_sm"
        android:alpha="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_flash_card"
            android:backgroundTint="?colorSurfaceContainerHighest"
            android:layout_margin="@dimen/space_sm"
            android:padding="@dimen/space_lg">

            <TextView
                android:id="@+id/tv_back_progression"
                tools:text="1/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="?colorOnSurface"
                android:textSize="@dimen/text_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_card_type_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="?colorOnSurface"
                android:textSize="@dimen/text_sm"
                android:layout_marginEnd="@dimen/space_sm"
                android:layout_marginStart="@dimen/space_sm"
                app:layout_constraintEnd_toStartOf="@+id/bt_help_back"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Flash Card"/>

            <ImageButton
                android:id="@+id/bt_help_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/bt_help_button_text" />

            <TextView
                android:id="@+id/tv_definition"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSurface"
                app:autoSizeMaxTextSize="@dimen/text_xl3"
                app:autoSizeMinTextSize="@dimen/text_base"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_back_progression"
                tools:text="1. What is the capital of Madagascar?" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_margin="@dimen/space_sm">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_flash_card"
            android:backgroundTint="?colorSurfaceContainer"
            android:layout_margin="@dimen/space_sm"
            android:padding="@dimen/space_lg">

            <TextView
                android:id="@+id/tv_front_progression"
                tools:text="1/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="?colorOnSurface"
                android:textSize="@dimen/text_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="?colorOnSurface"
                android:textSize="@dimen/text_sm"
                android:layout_marginEnd="@dimen/space_sm"
                android:layout_marginStart="@dimen/space_sm"
                app:layout_constraintEnd_toStartOf="@+id/bt_help"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Flash Card"/>

            <ImageButton
                android:id="@+id/bt_help"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/bt_help_button_text" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSurface"
                app:autoSizeMaxTextSize="@dimen/text_xl3"
                app:autoSizeMinTextSize="@dimen/text_base"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/ll_definition_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_front_progression"
                tools:text="1. What is the capital of Madagascar?" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_definition_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_alternative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?colorOnSurface"
                    app:cornerRadius="@dimen/bt_radius"
                    android:layout_marginTop="@dimen/space_sm"
                    android:layout_marginBottom="@dimen/space_sm"
                    app:autoSizeMaxTextSize="@dimen/text_base"
                    app:autoSizeMinTextSize="@dimen/text_sm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Alternative1"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="?colorSurfaceContainerHigh"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_alternative2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?colorOnSurface"
                    app:cornerRadius="@dimen/bt_radius"
                    android:layout_marginTop="@dimen/space_sm"
                    android:layout_marginBottom="@dimen/space_sm"
                    app:autoSizeMaxTextSize="@dimen/text_base"
                    app:autoSizeMinTextSize="@dimen/text_sm"
                    tools:text="Alternative2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bt_alternative1"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="?colorSurfaceContainerHigh"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_alternative3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?colorOnSurface"
                    app:cornerRadius="@dimen/bt_radius"
                    android:layout_marginTop="@dimen/space_sm"
                    android:layout_marginBottom="@dimen/space_sm"
                    app:autoSizeMaxTextSize="@dimen/text_base"
                    app:autoSizeMinTextSize="@dimen/text_sm"
                    tools:text="Alternative3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bt_alternative2"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="?colorSurfaceContainerHigh"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_alternative4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?colorOnSurface"
                    app:cornerRadius="@dimen/bt_radius"
                    android:layout_marginTop="@dimen/space_sm"
                    android:layout_marginBottom="@dimen/space_sm"
                    app:autoSizeMaxTextSize="@dimen/text_base"
                    app:autoSizeMinTextSize="@dimen/text_sm"
                    tools:text="Alternative1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bt_alternative3"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="?colorSurfaceContainerHigh"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</FrameLayout>