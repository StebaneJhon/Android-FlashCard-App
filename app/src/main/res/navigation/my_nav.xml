<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/hostFragment">

    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.flashcard.card.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card" >
        <action
            android:id="@+id/navigateToDeckFragment"
            app:destination="@id/deckFragment" />
        <argument
            android:name="selectedDeck"
            app:argType="com.example.flashcard.backend.Model.ImmutableDeck" />
        <action
            android:id="@+id/action_cardFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_cardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/deckFragment"
        android:name="com.example.flashcard.deck.DeckFragment"
        android:label="fragment_deck"
        tools:layout="@layout/fragment_deck" >
        <action
            android:id="@+id/navigateToCardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.flashcard.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.flashcard.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingViewPagerFragment"
        android:name="com.example.flashcard.onboarding.OnBoardingViewPagerFragment"
        android:label="fragment_on_boarding_view_pager"
        tools:layout="@layout/fragment_on_boarding_view_pager" >

        <action
            android:id="@+id/action_onBoardingViewPagerFragment_to_deckFragment2"
            app:destination="@id/deckFragment"
            app:popUpTo="@id/onBoardingViewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/hostFragment"
        android:name="com.example.flashcard.mainActivity.HostFragment"
        android:label="fragment_host"
        tools:layout="@layout/fragment_host" >
        <action
            android:id="@+id/action_hostFragment_to_onBoardingViewPagerFragment"
            app:destination="@id/onBoardingViewPagerFragment"
            app:popUpTo="@id/hostFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_hostFragment_to_deckFragment2"
            app:destination="@id/deckFragment"
            app:popUpTo="@id/hostFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>