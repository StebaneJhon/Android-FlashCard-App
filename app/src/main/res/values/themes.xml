    <!--Dialog theme-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="titleTextColor">?colorPrimary</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="backgroundColor">?colorSurfaceContainerLow</item>
        <item name="android:background">?colorSurfaceContainerLow</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- Rounded dialog theme -->
    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- PopUpMenu theme -->
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- Toolbar theme -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">

    </style>

    <!--Progress bar style-->
    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.LinearProgressIndicator</item>
        <item name="trackThickness">20dp</item>
        <item name="trackColor">?colorSurfaceContainer</item>
    </style>

    <style name="ThemeOverlay.App.LinearProgressIndicator" parent="">
        <item name="colorPrimary">?colorSurfaceContainerHighest</item>
    </style>

